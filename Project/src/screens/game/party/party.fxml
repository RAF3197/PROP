<Group fx:id="theGroup" onKeyPressed="#handleKey" stylesheets="@../../styles/styles.css" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="screens.game.party.PartyController">
