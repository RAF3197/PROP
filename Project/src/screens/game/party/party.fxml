               <children>
                  <Label fx:id="nextNumber" alignment="CENTER" contentDisplay="CENTER" layoutX="2.0" layoutY="68.0" prefHeight="39.0" prefWidth="180.0" style="-fx-font-size: 35px;" styleClass="game_background_panel_text" text="2" textAlignment="CENTER" />
