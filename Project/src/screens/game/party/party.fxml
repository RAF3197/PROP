                   <Button focusTraversable="false" layoutX="12.0" layoutY="352.0" onAction="#handleResoldreButton" prefHeight="28.0" prefWidth="158.0" text="Comprobar" />
                  <Button fx:id="resetButton" focusTraversable="false" layoutX="11.0" layoutY="313.0" mnemonicParsing="false" onAction="#handleResetButton" prefHeight="28.0" prefWidth="158.0" text="Reiniciar" />
